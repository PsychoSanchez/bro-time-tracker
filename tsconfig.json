{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "isolatedModules": true
  }
}
