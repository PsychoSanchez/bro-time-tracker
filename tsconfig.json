{
  "compilerOptions": {
    "outDir": "./dist/",
    "paths": {
      "@shared/*": ["./src/shared/*"]
    },
    "sourceMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "CommonJS",
    "target": "ES2018",
    "jsx": "react",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "moduleResolution": "node",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment"
  }
}
