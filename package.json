    "prettier": "3.3.3",
    "storybook": "8.4.2",
    "style-loader": "4.0.0",
    "tailwindcss": "3.4.14",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "5.6.3",
    "web-ext-types": "^3.2.1",
    "webpack": "5.96.1",
    "webpack-cli": "5.1.4"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.1.2",
